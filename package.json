    "@tailwindcss/typography": "^0.5.13",
    "@types/eslint": "^8.56.11",
    "autoprefixer": "^10.4.19",
    "eslint": "^9.7.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.43.0",
    "globals": "^15.8.0",
    "postcss": "^8.4.40",
    "prettier": "^3.3.3",
